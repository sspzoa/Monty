<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5D6DBE"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="그래픽 환경"
            android:fontFamily="@font/nanumsquareeb"
            android:textColor="#EEEEEE"
            android:textSize="30dp" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/exit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/exit_btn" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_marginTop="10dp"
                android:background="@drawable/category_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareb"
                android:padding="5dp"
                android:text="유지했을 경우"
                android:textColor="#EEEEEE"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/maintain_door_0"
                    android:layout_width="wrap_content"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:src="@drawable/door_closed" />

                <ImageView
                    android:id="@+id/maintain_door_1"
                    android:layout_width="wrap_content"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:src="@drawable/door_closed" />

                <ImageView
                    android:id="@+id/maintain_door_2"
                    android:layout_width="wrap_content"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:src="@drawable/door_closed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="2.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/menu_background"
                    android:id="@+id/maintain_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareb"
                    android:padding="10dp"
                    android:text="성공: □/□"
                    android:textColor="#EEEEEE"
                    android:textSize="25dp" />

                <TextView
                    android:layout_marginLeft="2.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/menu_background"
                    android:id="@+id/maintain_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareb"
                    android:padding="10dp"
                    android:text="결과: □□.□%"
                    android:textColor="#EEEEEE"
                    android:textSize="25dp" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:background="@drawable/category_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareb"
                android:padding="5dp"
                android:text="바꾸었을 경우"
                android:textColor="#EEEEEE"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/change_door_0"
                    android:layout_width="wrap_content"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:src="@drawable/door_closed" />

                <ImageView
                    android:id="@+id/change_door_1"
                    android:layout_width="wrap_content"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:src="@drawable/door_closed" />

                <ImageView
                    android:id="@+id/change_door_2"
                    android:layout_width="wrap_content"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:src="@drawable/door_closed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="2.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/menu_background"
                    android:id="@+id/change_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareb"
                    android:padding="10dp"
                    android:text="성공: □/□"
                    android:textColor="#EEEEEE"
                    android:textSize="25dp" />

                <TextView
                    android:layout_marginLeft="2.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/menu_background"
                    android:id="@+id/change_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareb"
                    android:padding="10dp"
                    android:text="결과: □□.□%"
                    android:textColor="#EEEEEE"
                    android:textSize="25dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/category_background"
                android:padding="5dp">

                <TextView
                    android:id="@+id/testno_tview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="110dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="실험 횟수: 100"
                    android:textColor="#EEEEEE"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/start_btn"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:padding="5dp"
                    android:text="시작"
                    android:textSize="25dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>