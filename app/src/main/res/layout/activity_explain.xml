<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5D6DBE"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="몬티 홀 문제란?"
            android:fontFamily="@font/nanumsquareeb"
            android:textColor="#EEEEEE"
            android:textSize="30dp" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/exit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/exit_btn" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/door_0"
                    android:layout_width="wrap_content"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:src="@drawable/door_goat" />

                <ImageView
                    android:id="@+id/door_1"
                    android:layout_width="wrap_content"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:src="@drawable/door_car" />

                <ImageView
                    android:id="@+id/door_2"
                    android:layout_width="wrap_content"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:src="@drawable/door_goat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/category_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#EEEEEE"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="3개의 문이 있습니다."
                    android:textSize="25dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/menu_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#EEEEEE"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="이중 하나의 문 뒤에는 자동차, 나머지 두 개의 문 뒤에는 염소가 있습니다."
                    android:textSize="25dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#EEEEEE"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="당신은 세 문 중 하나의 문을 선택해 그 문 뒤에 있는 상품을 가져갈 수 있습니다."
                    android:textSize="25dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#EEEEEE"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="하나의 문을 선택하면 사회자는 선택되지 않은 두 개의 문 중 염소가 있는 문을 공개합니다."
                    android:textSize="25dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#EEEEEE"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="그리고 당신에게 선택을 바꿀 기회를 제공합니다."
                    android:textSize="25dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#EEEEEE"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="이때, 선택을 바꾸는 것과 유지하는 것 중 어느 것이 자동차를 뽑을 확률이 더 높을까요?"
                    android:textSize="25dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>